        <thead>
            <tr>
                <th colspan="4">Particulars of PBP</th>
                <th>Result</th>
            </tr>
            <tr>
                <th>PBP</th>
                <th>Certification of Registration No.</th>
                <th>English Name</th>
                <th>Chinese Name</th>
                <th>Name of PBP</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.P_MW_RECORD.S_FORM_TYPE_CODE != "MW09")
            {
                <tr>
                    <td>
                        @*TBC  mwItemVersion*@
                        @((Model.AppointedAP.IDENTIFY_FLAG == "AP" || Model.AppointedAP.IDENTIFY_FLAG == "RI") ? "AP/RI" : Model.AppointedAP.IDENTIFY_FLAG)

                    </td>
                    <td>
                        @Model.AppointedAP.CERTIFICATION_NO
                    </td>
                    <td>
                        @Model.AppointedAP.ENGLISH_NAME
                        @if (!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_AP_INFO_ENGLISH_NAME_MSG))
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_AP_INFO_ENGLISH_NAME_MSG)
                        }
                    </td>
                    <td>
                        @Model.AppointedAP.CHINESE_NAME
                        @if (!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_AP_INFO_CHINESE_NAME_MSG))
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_AP_INFO_CHINESE_NAME_MSG)
                        }
                    </td>
                    <td>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_AP_INFO_NAME, "O", new { @class = "w3-radio", @disabled = "true" }) OK    </label>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_AP_INFO_NAME, "N", new { @class = "w3-radio", @disabled = "true" }) Not OK</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Model.AppointedRSE.IDENTIFY_FLAG
                    </td>
                    <td>
                        @Model.AppointedRSE.CERTIFICATION_NO
                    </td>
                    <td>
                        @Model.AppointedRSE.ENGLISH_NAME
                        @if ((!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_INFO_ENGLISH_NAME_MSG)) && Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_NAME != "NA")
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_INFO_ENGLISH_NAME_MSG)
                        }
                    </td>
                    <td>
                        @Model.AppointedRSE.CHINESE_NAME
                        @if ((!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_INFO_CHINESE_NAME_MSG)) && Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_NAME != "NA")
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_INFO_CHINESE_NAME_MSG)
                        }
                    </td>

                    <td>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_INFO_NAME, "O", new { @class = "w3-radio", @disabled = "true" }) OK    </label>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_RSE_INFO_NAME, "N", new { @class = "w3-radio", @disabled = "true" }) Not OK</label>
                    </td>

                </tr>
                <tr>
                    <td>
                        @Model.AppointedRGE.IDENTIFY_FLAG
                    </td>
                    <td>
                        @Model.AppointedRGE.CERTIFICATION_NO
                    </td>
                    <td>
                        @Model.AppointedRGE.ENGLISH_NAME
                        @if ((!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_ENGLISH_NAME_MSG)) && Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_NAME != "NA")
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_ENGLISH_NAME_MSG)
                        }
                    </td>
                    <td>
                        @Model.AppointedRGE.CHINESE_NAME
                        @if ((!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_CHINESE_NAME_MSG)) && Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_NAME != "NA")
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_CHINESE_NAME_MSG)
                        }
                    </td>

                    <td>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_NAME, "O", new { @class = "w3-radio", @disabled = "true" }) OK    </label>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_NAME, "N", new { @class = "w3-radio", @disabled = "true" }) Not OK</label>
                    </td>

                </tr>
            }


            @if (Model.P_MW_RECORD.S_FORM_TYPE_CODE == "MW09")
            {
                <tr>
                    <td>
                        Nominator
                    </td>
                    <td>
                        @Model.AppointedOther0.CERTIFICATION_NO
                    </td>
                    <td>
                        @Model.AppointedOther0.ENGLISH_NAME
                        @if (!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_ENGLISH_NAME_MSG))
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_ENGLISH_NAME_MSG)
                        }
                    </td>
                    <td>
                        @Model.AppointedOther0.CHINESE_NAME
                        @if (!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_CHINESE_NAME_MSG))
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_CHINESE_NAME_MSG)
                        }
                    </td>
                    <td>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_INFO_NAME, "O", new { @class = "w3-radio", @disabled = "true" }) OK    </label>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_INFO_NAME, "N", new { @class = "w3-radio", @disabled = "true" }) Not OK</label>
                        @if (Model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_NAME == "N")
                        {
                            <label style="color:#FF0000;">
                            @Model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_INFO_NAME_MSG
                            </label>
                        }
                    </td>
                </tr>

                <tr>
                    <td>
                        Nominee
                    </td>
                    <td>
                        @Model.AppointedOther1.CERTIFICATION_NO
                    </td>
                    <td>
                        @Model.AppointedOther1.ENGLISH_NAME
                        @if (!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_ENGLISH_NAME_MSG))
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_ENGLISH_NAME_MSG)
                        }
                    </td>
                    <td>
                        @Model.AppointedOther1.CHINESE_NAME
                        @if (!string.IsNullOrEmpty(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_CHINESE_NAME_MSG))
                        {
                            @Html.Raw(Model.P_MW_RECORD_FORM_CHECKLIST.PBP_RGE_INFO_CHINESE_NAME_MSG)
                        }
                    </td>
                    <td>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_INFO_NAME, "O", new { @class = "w3-radio", @disabled = "true" }) OK    </label>
                        <label>@Html.RadioButtonFor(model => model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_INFO_NAME, "N", new { @class = "w3-radio", @disabled = "true" }) Not OK</label>
                        @if (Model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_NAME == "N")
                        {
                            <label style="color:#FF0000;">
                            @Model.P_MW_RECORD_FORM_CHECKLIST.PBP_NEW_INFO_NAME_MSG
                            </label>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <br />

