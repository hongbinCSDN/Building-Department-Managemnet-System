@model  MWMS2.Areas.MWProcessing.Models.AcknowledgementModel

<div class="w3-border displayForm">

    @if (Model.P_MW_RECORD.S_FORM_TYPE_CODE == "MW06")
    {
        <div class="panelHeader">
            Details of the Minor Work
        </div>
        <table class=" w3-table-all w3-hoverable resultTable">
            <thead>
                <tr>
                    <th>
                        Item sequence
                    </th>
                    <th>
                        Validated Item
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.P_MW_RECORD_ITEMs)
                {
                    if (Model.P_MW_RECORD.S_FORM_TYPE_CODE == "1"
                        || Model.P_MW_RECORD.S_FORM_TYPE_CODE == "2"
                        || Model.P_MW_RECORD.S_FORM_TYPE_CODE == "3"
                        || Model.P_MW_RECORD.S_FORM_TYPE_CODE == "4")
                    {
                        <tr>
                            <td>
                                @((item.ORDERING + 1).ToString())
                                &nbsp; in &nbsp;
                                @if (item.STATUS_CODE == "FINAL")
                                {
                                    @item.LAST_MODIFIED_FORM_CODE
                                }
                                else
                                {
                                    @Model.P_MW_RECORD.S_FORM_TYPE_CODE
                                }
                            </td>
                            <td>
                                @item.MW_ITEM_CODE
                            </td>
                            <td>
                                @if (item.STATUS_CODE == "FINAL")
                                {
                                    @item.LAST_MODIFIED_FORM_CODE
                                }
                                else
                                {
                                    @Model.P_MW_RECORD.S_FORM_TYPE_CODE
                                }
                            </td>
                            <td style="white-space: normal;width: 500px;">
                                @item.LOCATION_DESCRIPTION
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            @((item.ORDERING + 1).ToString())
                        </td>
                        <td>
                            @item.MW_ITEM_CODE
                        </td>
                        <td>
                            @item.STATUS_CODE
                        </td>
                        <td style="white-space: normal;width: 500px;">
                            @item.LOCATION_DESCRIPTION
                        </td>
                        <td>
                            @item.RELEVANT_REFERENCE
                        </td>
                    </tr>
                }

            </tbody>
        </table>

        <div class="panelHeader">
            Details of Strengthening Works
        </div>
        <table class=" w3-table-all w3-hoverable resultTable">
            <thead>
                <tr>
                    <th>
                        Item sequence
                    </th>
                    <th>
                        Minor Work item
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.P_MW_RECORD_ITEMs)
                {
                    if (Model.P_MW_RECORD.S_FORM_TYPE_CODE != "1"
                        || Model.P_MW_RECORD.S_FORM_TYPE_CODE != "2"
                        || Model.P_MW_RECORD.S_FORM_TYPE_CODE != "3"
                        || Model.P_MW_RECORD.S_FORM_TYPE_CODE != "4")
                    {
                        <tr>
                            <td>
                                @((item.ORDERING + 1).ToString())
                                &nbsp; in &nbsp;
                                @if (item.STATUS_CODE == "FINAL")
                                {
                                    @item.LAST_MODIFIED_FORM_CODE
                                }
                                else
                                {
                                    @Model.P_MW_RECORD.S_FORM_TYPE_CODE
                                }
                            </td>
                            <td>
                                @item.MW_ITEM_CODE
                            </td>
                            <td>
                                @if (item.STATUS_CODE == "FINAL")
                                {
                                    @item.LAST_MODIFIED_FORM_CODE
                                }
                                else
                                {
                                    @Model.P_MW_RECORD.S_FORM_TYPE_CODE
                                }
                            </td>
                            <td style="white-space: normal;width: 500px;">
                                @item.LOCATION_DESCRIPTION
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            @((item.ORDERING + 1).ToString())
                        </td>
                        <td>
                            @item.MW_ITEM_CODE
                        </td>
                        <td>
                            @item.STATUS_CODE
                        </td>
                        <td style="white-space: normal;width: 500px;">
                            @item.LOCATION_DESCRIPTION
                        </td>
                        <td>
                            @item.RELEVANT_REFERENCE
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <div class="panelHeader">
            Details of the minor work
        </div>
        <table class=" w3-table-all w3-hoverable resultTable">
            <thead>
                <tr>
                    <th>
                        Item sequence
                    </th>
                    <th>
                        Minor Work item
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Relevant Order/ Direction/ Notice No./ BD Reference No.
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.P_MW_RECORD_ITEMs)
                {
                    <tr>
                        <td>
                            @((item.ORDERING + 1).ToString())
                        </td>
                        <td>
                            @item.MW_ITEM_CODE
                        </td>
                        <td>
                            @item.STATUS_CODE
                        </td>
                        <td style="white-space: normal;width: 500px;">
                            @item.LOCATION_DESCRIPTION
                        </td>
                        <td>
                            @item.RELEVANT_REFERENCE
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }



    @*Particulars of PBP*@
