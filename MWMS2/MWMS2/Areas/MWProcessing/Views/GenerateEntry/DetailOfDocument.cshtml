@model MWMS2.Areas.MWProcessing.Models.Fn02MWUR_GEModel

@Html.HiddenFor(m=>m.P_MW_GENERAL_RECORD.UUID)
@Html.HiddenFor(m => m.P_MW_PERSON_CONTACT.UUID)
@Html.HiddenFor(m => m.P_MW_ADDRESS.UUID)

<div class="panelHeader">Details of (Publicity) Document</div>
<div class="displayForm">
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                English Name of Author/Organization
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_GENERAL_RECORD.ENGLISH_NAME)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Chinese Name of Author/Organization
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_GENERAL_RECORD.CHINESE_NAME)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Subject Title
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_GENERAL_RECORD.CASE_TITLE, new { })
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Subject Address
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_GENERAL_RECORD.VENUE, new { })
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Channel
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_GENERAL_RECORD.CHANNEL, new { })
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Section/Unit Reference No.
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_GENERAL_RECORD.SECTION_UNIT_REF)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Corresspondence Address
            </div>
            <div class="w3-col l8 m12 s12">

            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Street/Road/Village
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_ADDRESS.CHINESE_STREET_NAME)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Street Number
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_ADDRESS.STREET_NO)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Building/Estate
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_ADDRESS.BUILDING_NAME)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Floor
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_ADDRESS.FLOOR)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Flat/Room
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_ADDRESS.FLAT)
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                District
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_ADDRESS.DISTRICT, new { })
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.RadioButtonFor(m => m.P_MW_ADDRESS.REGION, "HK", new { @class = "w3-radio" }) Hong Kong &nbsp;
                @Html.RadioButtonFor(m => m.P_MW_ADDRESS.REGION, "KLW", new { @class = "w3-radio" }) Kowloon &nbsp;
                @Html.RadioButtonFor(m => m.P_MW_ADDRESS.REGION, "NT", new { @class = "w3-radio" }) New Territories &nbsp;
            </div>
        </div>
    </div>

    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                E-mail Address
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_PERSON_CONTACT.EMAIL, new { })
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Contact No.
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_PERSON_CONTACT.CONTACT_NO, new { })
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l4 m12 s12">
                Fax No.
            </div>
            <div class="w3-col l8 m12 s12">
                @Html.TextBoxFor(m => m.P_MW_PERSON_CONTACT.FAX_NO, new { })
            </div>
        </div>
    </div>

</div>