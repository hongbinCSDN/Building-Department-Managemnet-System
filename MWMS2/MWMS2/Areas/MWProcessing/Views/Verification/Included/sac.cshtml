                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.SITE_INSAP_E_NO_MATERIAL_DEVIATION, "Y", htmlAttributesRadio)
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.SITE_INSAP_E_NO_MATERIAL_DEVIATION, "N", htmlAttributesRadio)
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.SITE_INSAP_E_NO_MATERIAL_DEVIATION, "NA", htmlAttributesRadio)
                </td>
            </tr>

            <tr>
