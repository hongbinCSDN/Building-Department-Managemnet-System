                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.DESK_STUDY_A_CORR_MW_ITEM, "N", htmlAttributesRadio)
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.DESK_STUDY_A_CORR_MW_ITEM, "NA", htmlAttributesRadio)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    b. Works specified in conformity with the last site inspection record in EB file ?
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.DESK_STUDY_B_LAST_INSP_RECORD, "Y", htmlAttributesRadio)
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.DESK_STUDY_B_LAST_INSP_RECORD, "N", htmlAttributesRadio)
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.DESK_STUDY_B_LAST_INSP_RECORD, "NA", htmlAttributesRadio)
                </td>
            </tr>
