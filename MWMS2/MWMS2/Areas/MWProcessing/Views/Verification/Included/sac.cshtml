                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.SITE_INSAP_F_NO_CONTRAVENTION, "Y", htmlAttributesRadio)
                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.SITE_INSAP_F_NO_CONTRAVENTION, "N", htmlAttributesRadio)
