@model MWMS2.Areas.MWProcessing.Models.VerificaionFormModel

@{
    Dictionary<string, object> htmlAttributes = new Dictionary<string, object>();


    Dictionary<string, object> htmlAttributesRadio = new Dictionary<string, object>();
    htmlAttributesRadio.Add("class", "w3-radio");

    Dictionary<string, object> htmlAttributesDate = new Dictionary<string, object>();
    htmlAttributesDate.Add("class", "inputDate");

    if (Model.IsSummary)
    {
        htmlAttributes.Add("disabled", "true");
        htmlAttributesRadio.Add("disabled", "true");
        htmlAttributesDate.Add("disabled", "true");
    }

}
<div id="SACContent" class="w3-border displayForm">

    @Html.HiddenFor(model => model.P_MW_RECORD_SAC.UUID)
    @Html.HiddenFor(model => model.P_MW_RECORD_SAC.SYS_PAGE_CODE)
    <div class="panelHeader" style="display:none;">
        <label id="SACTitle">SAC</label>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l3 m12 s12">
                MW Submission No:
            </div>
            <div class="w3-col l9 m12 s12">
                <div class="w3-col l6 m12 s12">
                    @Model.P_MW_REFERENCE_NO.REFERENCE_NO
                </div>
                <div class="w3-col l6 m12 s12">
                    <label>
                        @Html.CheckBoxFor(model => model.P_MW_RECORD_SAC.IsCHK_COMMENCEMENT, htmlAttributes)
                        Commencement
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l3 m12 s12">
                Date of Inspection
            </div>
            <div class="w3-col l9 m12 s12">
                <div class="w3-col l6 m12 s12">
                    @Html.TextBoxFor(model => model.P_MW_RECORD_SAC.INSPECTION_DATE, htmlAttributesDate)
                </div>
                <div class="w3-col l6 m12 s12">
                    <label>
                        @Html.CheckBoxFor(model => model.P_MW_RECORD_SAC.IsCHK_COMPLETION, htmlAttributes)
                        Completion
                    </label>
                </div>
            </div>

        </div>
    </div>

    <div class="panelHeader">
        Part I
    </div>
    <table class="resultTable">
