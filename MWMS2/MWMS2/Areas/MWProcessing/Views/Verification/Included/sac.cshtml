                </td>
                <td>
                    @Html.RadioButtonFor(model => model.P_MW_RECORD_SAC.SITE_INSAP_C_NO_OBVIOUS_CONTRAVENTION, "NA", htmlAttributesRadio)
                </td>
            </tr>
            <tr>
