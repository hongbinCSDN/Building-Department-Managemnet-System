@model  MWMS2.Areas.MWProcessing.Models.VerificaionFormModel

<div class="panelHeader">
    Details of the Minor Work
</div>

<div class="w3-border displayForm">
    <table class=" w3-table-all w3-hoverable resultTable">
        <thead>
            <tr>
                <th style="width:10%">
                    Item sequence
                </th>
                <th style="width:10%">
                    Minor Work item
                </th>
                <th style="width:10%">
                    Type
                </th>
                <th style="width:50%">
                    Description
                </th>
                <th style="width:20%">
                    Relevant Order/ Direction/ Notice No./ BD Reference No.
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.P_MW_RECORD_ITEMs)
            {
                <tr>
                    <td>
                        @((item.ORDERING + 1).ToString())
                    </td>
                    <td>
                        @item.MW_ITEM_CODE
                    </td>
                    <td>
                        @item.STATUS_CODE
                    </td>
                    <td style="white-space: normal;width: 500px;">
                        @item.LOCATION_DESCRIPTION
                    </td>
                    <td>
                        @item.RELEVANT_REFERENCE
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="w3-row">
        @if (!Model.IsSummary)
        {
            <button id="saveButton" class="btn btn-default" style="float:right" onclick="clickHistory()" type="button"> History</button>
        }
    </div>

    

</div>


<div id="divFianlItem" hidden class="w3-border displayForm">
    <div class="panelHeader">
        Minor Work Item
    </div>
    <table id="tableFinalItem" class=" w3-table-all w3-hoverable resultTable">
        <thead>
            <tr>
                <th style="width:10%">
                    Item No.
                </th>
                <th style="width:70%">
                    Description
                </th>
                <th style="width:20%">
                    Relevant Order/ Direction/ Notice No./ BD Reference No.
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FinalP_MW_RECORD_ITEMs)
            {
                <tr>
                    <td>
                        @item.MW_ITEM_CODE
                    </td>
                    <td style="white-space: normal;width: 500px;">
                        @item.LOCATION_DESCRIPTION
                    </td>
                    <td>
                        @item.RELEVANT_REFERENCE
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<br />


<script type="text/javascript">
    function clickHistory() {
        var divFianlItem = document.getElementById("divFianlItem");
        divFianlItem.hidden = !divFianlItem.hidden;

    }

</script>
