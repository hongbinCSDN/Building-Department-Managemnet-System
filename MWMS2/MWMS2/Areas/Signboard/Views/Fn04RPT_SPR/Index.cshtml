@model MWMS2.Areas.Signboard.Models.Fn04RPT_SPRSearchModel
<script>
    function Search() {
        thisForm = document.getElementById('reportForm');
        thisForm.action = 'SearchSPR';
        thisForm.submit();
    }
</script>
<div class="panelHeader">
    Search Criteria
</div>
<form action="reportForm" method="post" id="reportForm">
    <div id="searchCriteria">
        <div class="displayForm" style="overflow-x:auto">
            <div class="w3-row">
                <div class="w3-col l6 m12 s12">
                    <div class="w3-col l2 m6 s12">
                        Period :
                    </div>
                    <div class="w3-col l10 m6 s12">
                        &nbsp;From&nbsp;@Html.TextBoxFor(model => model.PeriodFromDate, new { @class = "inputDate" })
                        &nbsp;To&nbsp; @Html.TextBoxFor(model => model.PeriodToDate, new { @class = "inputDate" })
                    </div>
                </div>
                <div class="w3-col l6 m12 s12">
                    <div class="w3-col l3 m6 s12"> Submission No. :</div>
                    <div class="w3-col l6 m6 s12">
                        @Html.TextBoxFor(model => model.SubNo)
                    </div>
                </div>
            </div>
            <div class="w3-container footer">
                <button onclick="Search()" class="searchButton btn btn-default" type="button" id="MRSearchBtn">
                    <i class="fa fa-search"></i> Search
                </button>
                <button class="resetButton btn btn-default" type="button"><i class="fa fa-eraser"></i> Clear</button>
            </div>
        </div>
    </div>
</form>