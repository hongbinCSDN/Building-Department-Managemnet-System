@model MWMS2.Areas.Admin.Models.PEM1103MWNumberPrefixModel
<div class="panelHeader">MW Number Prefix</div>
<div id="searchCriteria" class="w3-border displayForm">
    <div class="w3-row">
        <div class="w3-col l12 m12 s12">
            <div class="w3-col l3 m12 s12">Prefix :</div>
            <div class="w3-col l4 m12 s12">
               &nbsp;  MW @Html.TextBoxFor(model => model.Code, new { @type="number", @oninput = "this.value=this.value.length>4?this.value.substr(0,4):this.value;" })
            </div>
        </div>
    </div>
    <div class="w3-container footer">
        <button type="button" class="btn btn-default" onclick="Save()">Save</button>
        <button type="button" class="btn btn-default" onclick="cancel()">Cancel</button>
    </div>
</div>
<script>
    function cancel() {
        //window.location.href = domId("rootPath").value + "/PEM1103/PEM1103";
        goTo(domId("rootPath").value + '/PEM1103/PEM1103', [{ name: 'pageCode', value: '100601' }]);
    }
</script>
<script>
    function Save() {
        if ($('#Code').val() == null || $('#Code').val() == '') {
            alert("Please input the code.");
            return;
        }
        $.ajax({
            url: 'Save'
            , type: 'POST'
            , data: {
                Code: $('#Code').val()
            }
            , success: function (data) {
                alert(data.Message[0]);
                //if (data != null && data.Result == "SUCCESS") {
                //}
                //else {

                //}
            }
        });
    }
</script>