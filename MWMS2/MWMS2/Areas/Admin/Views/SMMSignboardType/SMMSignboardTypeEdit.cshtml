@model MWMS2.Entity.B_S_SYSTEM_VALUE

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var newHeight_i = $("#input-area").height();
            $("#type-tag").height(newHeight_i);
            var newHeight_t = $("#text-area").height();
            $("#desc-tag").height(newHeight_t);
        });
    </script>
}

<h3>Types of Signboard</h3>
<div style="text-align: right; width: 100%;">
    Last Modified Date:
    <span id="MODIFIED_DATE">
        @ViewBag.MODIFIED_DATE
    </span>
</div>
<div style="text-align: right; width: 100%;">
    Last Modified By:
    <span id="MODIFIED_BY">
        @Html.DisplayFor(model => model.MODIFIED_BY)
    </span>
</div>

@using (Html.BeginForm("SMMSignboardTypeEdit", "SMMSignboardType", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="sList w3-border displayForm">
        <div class="w3-row">
            @Html.TextBoxFor(model => model.UUID, new { style = "display: none;" })
            <div class="w3-col l9 m9 s9">
                <div class="w3-col l4 m4 s4">No. :</div>
                <div class="w3-col l8 m8 s8">
                   @* @Html.EditorFor(model => model.ORDERING, new { htmlAttributes = new { @class = "form-control", style = "max-width:600px", id = "ORDERING", @type = "number", @min = "0" } })*@
                    @Html.TextBoxFor(model => model.ORDERING, new { @type="number" } )
                    @*<input class="form-control" name="ordering" style = "max-width:600px" type="text"/>*@
                </div>
            </div>
            <div class="w3-col l9 m9 s9">
                <div class="w3-col l4 m4 s4" id="type-tag">Type :</div>
                <div class="w3-col l8 m8 s8" id="input-area">
                    <input class="form-control" name="typeEng" type="text" value="@ViewBag.typeEng" />
                    <input class="form-control" name="typeChi"  type="text" value="@ViewBag.typeChi" />
                </div>
            </div>
            <div class="w3-col l9 m9 s9">
                <div class="w3-col l4 m4 s4" id="desc-tag">Description :</div>
                <div class="w3-col l8 m8 s8" id="text-area">
                    <textarea class="form-control" name="descEng" style=" resize: none; display: block;" type="text">@ViewBag.descEng</textarea>
                    <textarea class="form-control" name="descChi" style=" resize: none; display: block;" type="text">@ViewBag.descChi</textarea>
                </div>
            </div>
        </div>
        <div class="w3-container footer">
            @*<input type="submit" class="btn btn-default SaveBtn" id="Save" value="Save" />*@
            <button type="submit" class="btn btn-default SaveBtn" id="Save" value="Save"><i class="fa fa-save"></i> Save</button>
            @*<input class="btn btn-default inputButton" id="btnCancel" name="btnCancel" value="Cancel" onclick='location.href="@Url.Action("Index", "SMMSignboardType")"' type="button">*@
            <button class="btn btn-default" id="btnCancel" name="btnCancel" value="Cancel" onclick='location.href="@Url.Action("Index", "SMMSignboardType")"' type="button"><i class="fa fa-times"></i> Cancel</button>
        </div>
    </div>
}
