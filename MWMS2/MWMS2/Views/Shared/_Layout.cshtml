                        var a = dom_(adiv, "a", [{ id: "menu_" + lv1.child[j].code }, { "html": "- " + lv1.child[j].text }, { "href": "/" + lv1.child[j].code.substring(0, 7) + "/" + lv1.child[j].code.substring(0, 7) + "/" + "?pageCode=" + lv1.child[j].code }]);
