<Window x:Class="PScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PScan"
        mc:Ignorable="d"
        Title="Building Department - Minor Work Processing Scanning Tool" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <TabItem Header="Search">
                <Grid Background="#FFE5E5E5">
                    <local:UCSearch HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </Grid>
            </TabItem>
            <TabItem Header="Scan">
                <Grid Background="#FFE5E5E5" >
                    <local:UCScan HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
                </Grid>
            </TabItem>
            <TabItem Header="Batch Update">
                <Grid Background="#FFE5E5E5">
                    <local:UCBatchUpdate HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
