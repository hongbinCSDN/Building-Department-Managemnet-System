<UserControl x:Class="PScan.UCBatchUpdate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PScan"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBox Name="TextBoxFile" Width="400" Margin="10,10,0,10"></TextBox>
            <Button Name="ButtonFile" Width="80" Content="Browse.." Margin="0,10,0,10" Click="ButtonFile_Click"></Button>
        </WrapPanel>
        <TabControl Grid.Row="1" Name="TabControlSheets" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"></TabControl>
    </Grid>
</UserControl>
